{
  "extends": "../tsconfig.json",
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "rootDir": "../",
    "baseUrl": "../" /* Specify the base directory to resolve non-relative module names. */,
    "paths": {
      "src/*": ["src/*"],
      "test/*": ["test/*"]
    }
  },
  "include": ["../src/**/*", "../test/**/*"]
}
